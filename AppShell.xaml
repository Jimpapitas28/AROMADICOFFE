<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AROMADICOFFE.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AROMADICOFFE.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="">

    <Shell.FlyoutBackgroundColor>
        <Color>#fff6ed</Color>
    </Shell.FlyoutBackgroundColor>

    <Shell.FlyoutHeader>
        <VerticalStackLayout Padding="30, 40, 30, 20" Spacing="20">
            <Border 
                StrokeShape="Ellipse" 
                Padding="0" 
                WidthRequest="120" 
                HeightRequest="120"
                HorizontalOptions="Center" 
                StrokeThickness="2" 
                Stroke="#795548">
                <Image 
                    Source="header.jpeg" 
                    Aspect="AspectFill"
                    />
            </Border>

            <BoxView 
                HeightRequest="1" 
                Color="#4E342E" 
                Margin="0, 10, 0, 0" 
                HorizontalOptions="FillAndExpand"/>

        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="20, 15" ColumnDefinitions="40, *">

                <Image 
                    Grid.Column="0" 
                    Source="{Binding Icon}" 
                    WidthRequest="24" 
                    HeightRequest="24"
                    Aspect="AspectFit"
                    VerticalOptions="Center"
                    />

                <Label 
                    Grid.Column="1" 
                    Text="{Binding Title}" 
                    FontSize="16" 
                    TextColor="#292718" 
                    FontAttributes="Bold"
                    Margin="15, 0, 0, 0"
                    VerticalOptions="Center"
                    />

            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>


    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="INICIO"
            ContentTemplate="{DataTemplate local:Home}"
            Route="Home"
            Icon="logo1.png"
            Shell.BackgroundColor="#FBF7F0" 
            Shell.TitleColor="Black"   
            Shell.ForegroundColor="Black"/>

        <ShellContent
            Title="NUESTRO MENÚ"
            ContentTemplate="{DataTemplate local:Menu}"
            Route="Menu"
            Icon="logo1.png"/>

        <ShellContent
            Title="MI CARRITO"
            ContentTemplate="{DataTemplate local:Carritos}"
            Route="Carritos"
            Icon="logo1.png"/>

        <ShellContent
            Title="INICIAR SESIÓN"
            ContentTemplate="{DataTemplate local:Login}"
            Route="Iniciar Sesión"
            Icon="logo1.png"/>

        <ShellContent
            Title="CONFIGURACIÓN"
            ContentTemplate="{DataTemplate local:Miperfil}"
            Route="Miperfil"
            Icon="logo1.png"/>
    </FlyoutItem>

</Shell>