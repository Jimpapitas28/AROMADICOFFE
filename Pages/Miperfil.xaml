<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AROMADICOFFE.Pages.Miperfil"
             Title="Miperfil"
             BackgroundColor="#F6F2EE">


    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="BrandDark">#3F2B20</Color>
            <Color x:Key="BrandMid">#8F6A47</Color>
            <Color x:Key="BrandLight">#401F1F</Color>
            <Color x:Key="AccentGold">#B78076</Color>
            <Color x:Key="OverlayBlack">#000000</Color>

            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{StaticResource AccentGold}" />
                <Setter Property="StrokeThickness" Value="0.6" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="10"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource AccentGold}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="22"/>
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#EADFC9" />
                <Setter Property="TextColor" Value="{StaticResource BrandDark}" />
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="22"/>
            </Style>

            <Style x:Key="InputEntry" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#FBF6F2" />
                <Setter Property="HeightRequest" Value="44" />
                <Setter Property="TextColor" Value="{StaticResource BrandDark}" />
            </Style>

            <Style x:Key="SmallLabel" TargetType="Label">
                <Setter Property="FontSize" Value="13" />
                <Setter Property="TextColor" Value="{StaticResource BrandDark}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Image Source="cafe_bg.jpg" Aspect="AspectFill" Opacity="0.95" />

        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#00000000" Offset="0.0" />
                    <GradientStop Color="#00000066" Offset="0.45" />
                    <GradientStop Color="#00000099" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="22">

                <HorizontalStackLayout HorizontalOptions="Fill" VerticalOptions="Start" Padding="4" >
                    <VerticalStackLayout HorizontalOptions="Start" Spacing="2">
                        <Label Text="Aroma D' Café" FontSize="25" FontAttributes="Bold" TextColor="{StaticResource BrandLight}" />
                        <Label Text="·Perfil  " FontSize="14" TextColor="{StaticResource BrandLight}" />
                    </VerticalStackLayout>

                    <Border WidthRequest="48" HeightRequest="48" BackgroundColor="#00000030" Padding="6">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                        <Label Text="☕" FontSize="20" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="{StaticResource BrandLight}" />
                    </Border>
                </HorizontalStackLayout>

                <Border Style="{StaticResource CardBorderStyle}" Padding="14" Margin="0" >
                    <Border.Shadow>
                        <Shadow Brush="#00000033" Offset="0,8" Radius="18" Opacity="0.25" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="18" Padding="6">

                        <HorizontalStackLayout Spacing="14" VerticalOptions="Start" HorizontalOptions="Center">
                            <Border WidthRequest="140" HeightRequest="140" BackgroundColor="{StaticResource AccentGold}" Stroke="{StaticResource AccentGold}" Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="70"/>
                                </Border.StrokeShape>
                                <Image x:Name="ProfileImage" Source="placeholder.png" Aspect="AspectFill" />
                            </Border>

                            <VerticalStackLayout VerticalOptions="Center" Spacing="6" WidthRequest="170">
                                <Label Text="Bienvenido/a," FontSize="20" TextColor="{StaticResource BrandDark}" />
                                <Label Text="Usuario" FontSize="21" FontAttributes="Bold" TextColor="{StaticResource BrandDark}" />
                                <Label Text="Miembro Aroma D'Café" FontSize="18" TextColor="{StaticResource BrandMid}" />

                                <Button Text="Cambiar foto" FontSize="15" TextColor="{StaticResource BrandMid}" BackgroundColor="Transparent" Clicked="Button_Clicked"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <VerticalStackLayout Spacing="12" Padding="2">
                            <Label Text="Datos del perfil" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource BrandDark}" />
                            <Grid ColumnDefinitions="*" RowDefinitions="Auto" ColumnSpacing="12" RowSpacing="8">
                                <VerticalStackLayout Grid.Column="0" Spacing="10">
                                    <Entry Placeholder="Usuario" x:Name="UsernameEntry" Style="{StaticResource InputEntry}" />
                                    <Entry Placeholder="Correo electrónico" x:Name="EmailEntry" Keyboard="Email" Style="{StaticResource InputEntry}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="10">
                                    <Entry Placeholder="Contraseña" x:Name="PasswordEntry" IsPassword="True" Style="{StaticResource InputEntry}" />
                                    <Entry Placeholder="Confirmar contraseña" x:Name="ConfirmPasswordEntry" IsPassword="True" Style="{StaticResource InputEntry}" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>

                        <Border StrokeThickness="0.6" Stroke="{StaticResource AccentGold}" Padding="12" BackgroundColor="#FBF8F6">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>

                            <VerticalStackLayout Spacing="10">
                                <Label Text="Califícanos" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource BrandDark}" />
                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                                    <ImageButton x:Name="Star1" Source="vacia.png" StyleId="1"  BackgroundColor="Transparent" HeightRequest="34" WidthRequest="34" Clicked="Star1_Clicked" />
                                    <ImageButton x:Name="Star2" Source="vacia.png" StyleId="2" BackgroundColor="Transparent" HeightRequest="34" WidthRequest="34" Clicked="Star1_Clicked" />
                                    <ImageButton x:Name="Star3" Source="vacia.png" StyleId="3" BackgroundColor="Transparent" HeightRequest="34" WidthRequest="34" Clicked="Star1_Clicked" />
                                    <ImageButton x:Name="Star4" Source="vacia.png" StyleId="4" BackgroundColor="Transparent" HeightRequest="34" WidthRequest="34" Clicked="Star1_Clicked" />
                                    <ImageButton x:Name="Star5" Source="vacia.png" StyleId="5" BackgroundColor="Transparent" HeightRequest="34" WidthRequest="34" Clicked="Star1_Clicked" />
                                </HorizontalStackLayout>

                                <Editor Placeholder="Deja un comentario..." x:Name="CommentEditor" HeightRequest="86" BackgroundColor="#FBF6F3" TextColor="{StaticResource BrandDark}" />

                                <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                                    <Button x:Name="ConfirmButton" Text="Confirmar" Style="{StaticResource PrimaryButton}" WidthRequest="100" Clicked="ConfirmButton_Clicked" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>

                        <HorizontalStackLayout Spacing="16" HorizontalOptions="Center" Padding="6">
                            <Button x:Name="SaveButton" Text="Guardar" Style="{StaticResource PrimaryButton}" WidthRequest="100" Clicked="SaveButton_Clicked" />
                            <Button x:Name="CancelButton" Text="Cancelar" Style="{StaticResource SecondaryButton}" WidthRequest="100" Clicked="CancelButton_Clicked" BackgroundColor="#D7B8B2"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Border>

                <VerticalStackLayout HorizontalOptions="Center" Spacing="6" Padding="6">
                    <Label Text="• Aroma D' Café " FontSize="12" Style="{StaticResource SmallLabel}"  HorizontalTextAlignment="Center" />
                    <Label Text="© 2025 Todos los derechos reservados" Style="{StaticResource SmallLabel}" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>