<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AROMADICOFFE.Pages.Login"
             Title="Iniciar Sesión"
             NavigationPage.HasNavigationBar="False">
    <AbsoluteLayout>

        <Image Source="login.jpeg"
               Aspect="AspectFill"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0,0,1,1"/>

        <BoxView BackgroundColor="#000000" Opacity="0.4"
                 AbsoluteLayout.LayoutFlags="All"
                 AbsoluteLayout.LayoutBounds="0,0,1,1"/>

        <ScrollView AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,0,1,1">

            <VerticalStackLayout Spacing="0"
                                 Padding="30, 30, 30, 30"
                                 HorizontalOptions="FillAndExpand">

                <VerticalStackLayout Spacing="0" Margin="0, 0, 0, 5">
                    <Label Text="Aroma Di' Cafe"
                           FontSize="48"
                           FontAttributes="Bold"
                           TextColor="White"
                           LineBreakMode="WordWrap"/>
                    <BoxView HeightRequest="1" 
                             Color="White" 
                             HorizontalOptions="FillAndExpand"
                             Margin="0, -4, 0, 10" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="15">

                    <Label Text="Inicia Sesión"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Margin="0, 0, 0, 10"/>

                    <Frame BackgroundColor="White"
                           Padding="1"
                           HeightRequest="50"
                           CornerRadius="8"
                           IsClippedToBounds="True">
                        <Entry Placeholder="Correo Electrónico"
                               PlaceholderColor="#777777"
                               TextColor="Black"
                               FontSize="16"
                               Keyboard="Email"
                               Margin="10, 0"/>
                    </Frame>

                    <Frame BackgroundColor="White"
                           Padding="1"
                           HeightRequest="50"
                           CornerRadius="8"
                           IsClippedToBounds="True">
                        <Entry Placeholder="Contraseña"
                               PlaceholderColor="#777777"
                               TextColor="Black"
                               FontSize="16"
                               IsPassword="True"
                               Margin="10, 0"/>
                    </Frame>

                    <StackLayout Orientation="Horizontal" Margin="0, 5">
                        <CheckBox Color="White"/>
                        <Label Text="Recuérdame"
                               TextColor="White"
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>

                    <Button Text="INICIAR SESIÓN AHORA"
                            BackgroundColor="#FF7F40" TextColor="White"
                            CornerRadius="8"
                            HeightRequest="50"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="0, 10, 0, 0"/>

                    <Label Text="¿Olvidaste tu contraseña?"
                           TextColor="White"
                           HorizontalOptions="Center"
                           FontSize="14"
                           Margin="0, 10, 0, 0"/>

                    <VerticalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0, 30, 0, 0">
                        <Label Text="Al hacer clic en 'Iniciar Sesión Ahora' aceptas"
                               TextColor="White"
                               FontSize="12"
                               HorizontalOptions="Center"/>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                            <Label Text="Términos de Servicio" TextColor="White" FontSize="12" TextDecorations="Underline"/>
                            <Label Text="|" TextColor="White" FontSize="12"/>
                            <Label Text="Política de Privacidad" TextColor="White" FontSize="12" TextDecorations="Underline"/>
                        </StackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>